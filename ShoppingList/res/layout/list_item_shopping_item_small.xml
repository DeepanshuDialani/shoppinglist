<org.openintents.shopping.ui.widget.backport.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gridlayout="http://schemas.android.com/apk/res/org.openintents.shopping"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    gridlayout:alignmentMode="alignBounds"
    android:orientation="horizontal"
    gridlayout:columnCount="7"
    gridlayout:columnOrderPreserved="false"
    gridlayout:useDefaultMargins="false" >	
	<RelativeLayout android:id="@+id/check_surround"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:paddingLeft="20dip"
			android:paddingRight="10dip"
	        android:focusable="false"
	        gridlayout:layout_rowSpan="3"
	        android:background="@android:drawable/menuitem_background"
            android:gravity="center_vertical" ><!-- android:clickable = "true" -->
	    <CheckBox android:id="@+id/check"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_alignParentTop="false"
	              android:layout_centerVertical="true"
	              android:textStyle="normal"
	              android:bufferType="spannable"
	              android:focusable="true"
	              android:visibility="invisible"      
	            />
	     <ImageView android:id="@+id/nocheck"
	    	      android:src="@drawable/ic_menu_add"
	              android:layout_width="28dip"
	              android:layout_height="28dip"
	              android:layout_centerVertical="true"
	              android:scaleType="centerInside"
	              android:focusable="true"
	              android:visibility="invisible"
	              android:gravity="center_vertical"
	            />
	</RelativeLayout>
    <!-- 
    <ImageView android:id="@+id/image"
               android:layout_width="12px"
               android:layout_height="12px"
               android:layout_alignParentTop="true"
               android:layout_alignParentBottom="true"
               android:visibility="gone"/>
    <TextView android:id="@+id/image_URI"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"/>  -->
            <!-- 
              android:layout_height="30dip"
              android:layout_gravity="center"
			  android:layout_centerVertical="true"
              android:layout_marginTop="-10dip"
              android:layout_marginBottom="-10dip"
              android:layout_marginRight="0dip"
              android:layout_marginTop="8dip"
              android:layout_marginBottom="8dip" -->
  
    <TextView android:id="@+id/priority"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/check"       	
              android:layout_marginTop="2dip"
			  android:layout_marginLeft="2dip"
              android:gravity="center_vertical"
              android:visibility="visible"/>     
	<TextView android:id="@+id/quantity"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dip"
        	android:layout_toRightOf="@id/priority"
        	android:layout_alignParentTop="true"
        	android:layout_alignWithParentIfMissing="true"
		    android:visibility="visible"
		    android:textStyle="normal"
    		android:clickable="true"
            android:gravity="center_vertical"              
            android:text="1" />  
	<TextView android:id="@+id/units"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dip"
        	android:layout_toRightOf="@id/quantity"
        	android:layout_alignParentTop="true"
        	android:layout_alignWithParentIfMissing="true"
		    android:visibility="visible"
		    android:textStyle="normal"
    		android:clickable="true"
            android:gravity="center_vertical" />              
<!--        	android:layout_toLeftOf="@id/name"-->        
   <TextView android:id="@+id/name"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_gravity="fill_horizontal"
        	android:layout_toRightOf="@id/units"
        	android:layout_alignParentTop="true"
        	android:layout_alignWithParentIfMissing="true"
            android:layout_marginTop="2dip"
			android:gravity="center_vertical"
			android:textStyle="normal"
			android:bufferType="spannable"
			gridlayout:layout_columnSpan="2"
			gridlayout:layout_rowSpan="2"
			
			 />
			 <!-- 
        android:singleLine="true"
        android:ellipsize="end"
			android:layout_marginLeft="27dip"
			android:layout_marginRight="27dip" -->
	<ImageView android:id="@+id/has_note"
			   android:layout_width="18dip"
			   android:layout_height="18dip"
			   android:layout_toRightOf="@id/name"
			   android:layout_margin="4dip"
			   android:layout_marginTop="8dip"
			   android:layout_alignBottom="@id/name"
			   android:scaleType="centerInside"
			   android:src="@drawable/ic_launcher_notepad_small"
			   android:layout_column="6"
			/> 

   	<TextView android:id="@+id/tags"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_marginLeft = "10dip"
            gridlayout:layout_columnSpan="4"
            android:layout_column="1"
            
	    	android:layout_toRightOf="@id/check"        	
        	android:layout_below="@id/name"
        	android:layout_alignParentBottom="true"
        	android:layout_alignWithParentIfMissing="true"
			  android:gravity="top"
			  android:visibility="gone"/>
        <!-- 
        	android:layout_toRightOf="@id/quantity"  
        android:singleLine="true"
        android:ellipsize="end" -->
    <TextView android:id="@+id/price"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:layout_marginTop="2dip"
			  android:layout_marginLeft="10dip"
              android:gravity="center_vertical"
              android:layout_column="6"
              android:layout_gravity="bottom"
              android:visibility="visible"/>             
             <!-- 
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip" -->

</org.openintents.shopping.ui.widget.backport.GridLayout>
